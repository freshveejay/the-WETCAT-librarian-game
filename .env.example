# ===================================================================
# WETCAT Librarian - Environment Variables Template
# ===================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control
# ===================================================================

# Node Environment
NODE_ENV=development

# Vercel Deployment
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# Blockchain Configuration
# Get your Alchemy API key from: https://www.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Private key for contract deployment (WITHOUT 0x prefix)
# NEVER share or commit this key
PRIVATE_KEY=your_private_key_here

# Contract Addresses (will be populated after deployment)
WETCAT_GAME_REWARDS_ADDRESS=
WETCAT_TOKEN_ADDRESS=

# World App Integration
# Get from: https://developer.worldcoin.org/
WORLD_APP_ID=your_world_app_id_here
WORLD_APP_ACTION_ID=your_action_id_here

# API Configuration
API_URL=http://localhost:3000
WEBSOCKET_URL=ws://localhost:3001

# Game Configuration
GAME_DIFFICULTY=normal
ENABLE_DEBUG_MODE=false
ENABLE_ANALYTICS=false

# Database/Storage (if needed in future)
DATABASE_URL=
REDIS_URL=

# External Services
SENTRY_DSN=
ANALYTICS_ID=

# Feature Flags
ENABLE_MULTIPLAYER=false
ENABLE_LEADERBOARD=false
ENABLE_NFT_REWARDS=false

# Debug Settings (development only)
SKIP_CONTRACT_VERIFICATION=false
USE_LOCAL_BLOCKCHAIN=false